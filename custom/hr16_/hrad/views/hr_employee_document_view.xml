<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hrad_view_employee_document_form" model="ir.ui.view">
            <field name="name">hr.employee.document.form</field>
            <field name="model">hr.employee.document</field>
            <field name="inherit_id" ref="employee_documents_expiry.employee_document_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='doc_attachment_id']" position="replace">
                    <field name="document"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>