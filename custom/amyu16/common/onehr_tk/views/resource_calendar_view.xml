<odoo>
    <data>
        <record id="tk_resource_calendar_form" model="ir.ui.view">
            <field name="name">tk_resource.calendar.form</field>
            <field name="model">resource.calendar</field>
            <field name="inherit_id" ref="resource.resource_calendar_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='hours_per_day']" position="after">
                    <field name="late_allowance" widget="float_time"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>